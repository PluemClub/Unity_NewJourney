using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class FreezeFace : MonoBehaviour
{
    [SerializeField] GameObject[] movepoint;
    int currentMovePointIndex = 0;
    [SerializeField] float speed = 1f;

    public int MyScore = 0;
    public Text ShowingScore;

    private Animator WModel;

    [SerializeField] int MonHP = 0;
    [SerializeField] int MonScore = 0;

    void Start()
    {
        WModel = GetComponent<Animator>();
    }


    void Update()
    {
        if (Vector3.Distance(transform.position, movepoint[currentMovePointIndex].transform.position) < .1f)
        {
            currentMovePointIndex++;
            if (currentMovePointIndex >= movepoint.Length)
            {
                currentMovePointIndex = 0;
            }
        }

        transform.position = Vector3.MoveTowards(transform.position, movepoint[currentMovePointIndex].transform.position, speed * Time.deltaTime);
       
    }

    private void OnTriggerEnter(Collider other)
    {
        if (other.gameObject.tag == "DamageBullet")
        {

            MonHP = MonHP - 1;
            if (MonHP <= 0)
            {
                Destroy(other.gameObject);
                MyScore = MyScore + MonScore;
                ShowingScore.text = MyScore.ToString();
                Destroy(transform.gameObject);
            }

        }
    }

    private void OnCollisionEnter(Collision collision)
    {
        if (collision.gameObject.tag == "DamageBullet")
        {

            MonHP = MonHP - 1;
            if (MonHP <= 0)
            {
                Destroy(collision.gameObject);
                MyScore = MyScore + MonScore;
                ShowingScore.text = MyScore.ToString();
                Destroy(transform.gameObject);
            }

        }
    }
}
